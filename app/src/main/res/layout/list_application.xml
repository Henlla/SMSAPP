<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_margin="@dimen/_5sdp"
              android:layout_marginBottom="@dimen/_5sdp"
              android:layout_height="@dimen/_90sdp">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="@dimen/_15sdp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:id="@+id/appStatus"
                      android:textAllCaps="true"
                      android:textAlignment="center"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/_13sdp"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:text="DISCARD"/>
            <TextView android:layout_width="match_parent"
                      android:id="@+id/appDate"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/_13sdp"
                      android:text="2023-03-10"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:paddingVertical="@dimen/_5sdp"
                      android:orientation="vertical"
                      android:background="@drawable/attendance_background"
                      android:layout_gravity="center_vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Response Date: "
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/black"
                          android:text="Date"
                          android:id="@+id/responseDate"
                          android:layout_marginBottom="@dimen/_5sdp"
                          android:textSize="@dimen/_13sdp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="Message"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="Response note"
                      android:textColor="@color/black"
                      android:id="@+id/responseMessage"
                      android:textSize="@dimen/_13sdp"
                      android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
