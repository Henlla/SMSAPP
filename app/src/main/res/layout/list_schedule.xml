<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/_5sdp"
              android:layout_marginHorizontal="@dimen/_5sdp"
                android:background="@drawable/schedule_background">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_20sdp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_dayOfWeek"
                  android:layout_gravity="center"
                  android:text="T2"
                  android:textStyle="bold"
                  android:textSize="@dimen/_16sdp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/inria_serif_regular"
                  android:id="@+id/tv_date"
                  android:text=" 27/02"/>
    </LinearLayout>
    <View
            android:layout_width="1dp"
            android:layout_below="@+id/tv_fullName"
            android:layout_height="match_parent"
            android:background="@drawable/line_4"
            android:layout_marginStart="@dimen/_20sdp"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_schedule_details"/>
</LinearLayout>