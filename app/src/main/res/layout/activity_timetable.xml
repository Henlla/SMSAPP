<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.TimetableActivity">
    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_marginBottom="@dimen/_10sdp"
                                       android:background="@color/red">
        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/arrow_back"
                   android:backgroundTint="@null"
                   android:scaleType="centerCrop"
                   android:id="@+id/ic_back"
                   android:background="?attr/selectableItemBackgroundBorderless"
                   app:tint="@color/white"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/inria_serif_regular"
                  android:textSize="20sp"
                  android:layout_gravity="center"
                  android:layout_marginStart="30dp"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:id="@+id/sub_title"
                  android:text="Timetable"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_marginBottom="@dimen/_5sdp">
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/cbxClass"
                android:spinnerMode="dropdown"
                app:smsp_isSearchable="true"
                app:smsp_hintSize="@dimen/_10sdp"
                app:smsp_underlineSize="0dp"
                android:layout_gravity="center"
                app:smsp_floatingLabelText="Class"
                app:smsp_hint="Class"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                app:smsp_multilineError="false"
                android:background="@drawable/btn_dropdown_spin"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center">
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/cbxSemester"
                android:layout_marginEnd="@dimen/_15sdp"
                android:spinnerMode="dropdown"
                app:smsp_isSearchable="true"
                app:smsp_hintSize="@dimen/_10sdp"
                app:smsp_underlineSize="0dp"
                android:layout_gravity="center"
                app:smsp_floatingLabelText="Semester"
                app:smsp_hint="Semester"
                android:visibility="gone"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_35sdp"
                app:smsp_multilineError="false"
                android:background="@drawable/btn_dropdown_spin"/>
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/cbxSubject"
                android:spinnerMode="dropdown"
                app:smsp_isSearchable="true"
                app:smsp_hintSize="@dimen/_10sdp"
                app:smsp_underlineSize="0dp"
                app:smsp_floatingLabelText="Subject"
                app:smsp_hint="Subject"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_35sdp"
                app:smsp_multilineError="false"
                android:visibility="gone"
                android:background="@drawable/btn_dropdown_spin"/>
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/cbxWeek"
                android:spinnerMode="dropdown"
                android:layout_marginStart="@dimen/_15sdp"
                app:smsp_isSearchable="true"
                app:smsp_hintSize="@dimen/_10sdp"
                app:smsp_underlineSize="0dp"
                app:smsp_floatingLabelText="Week"
                app:smsp_hint="Week"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_35sdp"
                app:smsp_multilineError="false"
                android:visibility="gone"
                android:background="@drawable/btn_dropdown_spin"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_list_schedule"/>
</LinearLayout>