<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSAPP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="label">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/inria_serif_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/inria_serif_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_link">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/inria_serif_regular</item>
        <item name="android:textColor">@color/link_color</item>
    </style>
</resources>
